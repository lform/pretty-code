{
	"name": "@lform/pretty-code",
	"version": "1.0.3",
	"description": "Lform code style & lint configurations",
	"author": "Lform Design",
	"license": "MIT",
	"homepage": "https://github.com/lform/pretty-code#readme",
	"bugs": {
		"url": "https://github.com/lform/pretty-code/issues"
	},
	"dependencies": {
		"@linthtml/linthtml": "^0.9.6",
		"@linthtml/linthtml-config-recommended": "^0.1.0",
		"@stylistic/eslint-plugin-js": "^1.7.0",
		"@stylistic/stylelint-plugin": "^2.1.1",
		"@zackad/prettier-plugin-twig-melody": "^0.6.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-config-standard": "^17.1.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-promise": "^6.1.1",
		"prettier": "^3.2.0",
		"prettier-plugin-blade": "^2.1.12",
		"prettier-plugin-tailwindcss": "^0.5.13",
		"stylelint": "^16.2.0",
		"stylelint-config-standard": "^36.0.0",
		"stylelint-config-standard-scss": "^13.0.0",
		"stylelint-config-tailwindcss": "^0.0.7"
	},
	"main": "package.json",
	"private": false,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lform/pretty-code.git"
	},
	"scripts": {
		"pretty:format": "node_modules/.bin/prettier --config node_modules/@lform/pretty-code/.prettierrc.json --ignore-path node_modules/@lform/pretty-code/.prettierignore --write",
		"pretty:lint:css": "node_modules/.bin/stylelint --config node_modules/@lform/pretty-code/stylelint.json --ignore-path node_modules/@lform/pretty-code/stylelintignore --fix '**/*.{css,scss,pcss}'",
		"pretty:lint:js": "node_modules/.bin/eslint -c node_modules/@lform/pretty-code/.eslintrc.json --fix '**/*.{js,jsx,json,ts,tsx}'",
		"pretty:lint:html": "node_modules/.bin/linthtml --config node_modules/@lform/pretty-code/.linthtmlrc.json '**/*.{html,htm}'"
	},
	"bin": [
		"bin/npm/pretty-code"
	],
	"engines": {
		"node": ">=20.0.0"
	}
}
